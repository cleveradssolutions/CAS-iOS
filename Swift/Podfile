  pod 'CleverAdsSolutions-SDK', $casVersion
  ### Advanced integration:
  #pod 'CleverAdsSolutions-SDK/General', $casVersion
  #pod 'CleverAdsSolutions-SDK/SuperAwesome', $casVersion
  #pod 'CleverAdsSolutions-SDK/MyTarget', $casVersion
  #pod 'CleverAdsSolutions-SDK/MoPub', $casVersion
  #pod 'CleverAdsSolutions-SDK/Mintegral', $casVersion
  # ... any other combination of networks
  ### Cross Promotion integration:
  pod 'CleverAdsSolutions-Promo', $casVersion
end
